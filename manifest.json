{
  "name": "Pixel Artify",
  "version": "1.0",
  "description": "Transforme imagens em arte pixelada.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "permissions": ["contextMenus", "tabs", "unlimitedStorage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https:;"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  }
}
